<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yufei.dao.BlogDao">

    <resultMap type="com.yufei.entity.Blog" id="BlogMap">
        <result property="b0100" column="b0100" jdbcType="INTEGER"/>
        <result property="u0100" column="u0100" jdbcType="VARCHAR"/>
        <result property="b0102" column="b0102" jdbcType="TIMESTAMP"/>
        <result property="b0103" column="b0103" jdbcType="VARCHAR"/>
        <result property="b0104" column="b0104" jdbcType="VARCHAR"/>
        <result property="b0105" column="b0105" jdbcType="INTEGER"/>
        <result property="b0106" column="b0106" jdbcType="INTEGER"/>
        <result property="b0107" column="b0107" jdbcType="INTEGER"/>
        <result property="usable" column="usable" jdbcType="VARCHAR"/>
        <result property="operated" column="operated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BlogMap">
        select
          b0100, u0100, b0102, b0103, b0104, b0105, b0106, b0107, usable, operated
        from blog.blog
        where b0100 = #{b0100}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BlogMap">
        select
          b0100, u0100, b0102, b0103, b0104, b0105, b0106, b0107, usable, operated
        from blog.blog
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BlogMap">
        select
          b0100, u0100, b0102, b0103, b0104, b0105, b0106, b0107, usable, operated
        from blog.blog
        <where>
            <if test="b0100 != null">
                and b0100 = #{b0100}
            </if>
            <if test="u0100 != null and u0100 != ''">
                and u0100 = #{u0100}
            </if>
            <if test="b0102 != null">
                and b0102 = #{b0102}
            </if>
            <if test="b0103 != null and b0103 != ''">
                and b0103 = #{b0103}
            </if>
            <if test="b0104 != null and b0104 != ''">
                and b0104 = #{b0104}
            </if>
            <if test="b0105 != null">
                and b0105 = #{b0105}
            </if>
            <if test="b0106 != null">
                and b0106 = #{b0106}
            </if>
            <if test="b0107 != null">
                and b0107 = #{b0107}
            </if>
            <if test="usable != null and usable != ''">
                and usable = #{usable}
            </if>
            <if test="operated != null">
                and operated = #{operated}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="b0100" useGeneratedKeys="true">
        insert into blog.blog(u0100, b0102, b0103, b0104, b0105, b0106, b0107, usable, operated)
        values (#{u0100}, #{b0102}, #{b0103}, #{b0104}, #{b0105}, #{b0106}, #{b0107}, #{usable}, #{operated})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.blog
        <set>
            <if test="u0100 != null and u0100 != ''">
                u0100 = #{u0100},
            </if>
            <if test="b0102 != null">
                b0102 = #{b0102},
            </if>
            <if test="b0103 != null and b0103 != ''">
                b0103 = #{b0103},
            </if>
            <if test="b0104 != null and b0104 != ''">
                b0104 = #{b0104},
            </if>
            <if test="b0105 != null">
                b0105 = #{b0105},
            </if>
            <if test="b0106 != null">
                b0106 = #{b0106},
            </if>
            <if test="b0107 != null">
                b0107 = #{b0107},
            </if>
            <if test="usable != null and usable != ''">
                usable = #{usable},
            </if>
            <if test="operated != null">
                operated = #{operated},
            </if>
        </set>
        where b0100 = #{b0100}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.blog where b0100 = #{b0100}
    </delete>

</mapper>